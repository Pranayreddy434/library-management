package com.library.reservation;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/api/reservations")
public class ReservationController {
    private final ReservationService service;

    public ReservationController(ReservationService service) { this.service = service; }

    @GetMapping
    public List<Reservation> all() { return service.listAll(); }

    @PostMapping
    public ResponseEntity<Reservation> create(@RequestBody Reservation r) { return ResponseEntity.ok(service.create(r)); }

    @GetMapping("/{id}")
    public ResponseEntity<Reservation> get(@PathVariable Long id) { return ResponseEntity.ok(service.get(id)); }
}
