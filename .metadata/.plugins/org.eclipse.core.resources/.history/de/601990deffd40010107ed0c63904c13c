  datasource:
    url: jdbc:mysql://localhost:3306/library_db?createDatabaseIfNotExist=true
    username: root
    password: your_password
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        format_sql: true

